<div class="p-4" id="order-details">
    <!-- Company Logo/Name -->
    <div class="text-center mb-4">
        <% if (locals.logoUrl) { %>
            <img src="<%= logoUrl %>" alt="Company Logo" class="img-fluid mb-3" style="max-height: 60px;">
        <% } else { %>
            <div class="d-flex align-items-center gap-3 justify-content-center">
                <div class="bg-primary p-2 rounded-3">
                    <i data-lucide="building-2" class="text-white"></i>
                </div>
                <div>
                    <h2 class="h5 mb-0">Secure Payment</h2>
                    <p class="text-muted small mb-0">Powered by CachePay</p>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Order Information -->
    <div class="bg-white rounded-3 shadow-sm p-3 mb-4">
        <% if (transaction.orderId) { %>
            <div class="mb-2">
                <span class="text-muted">Order ID:</span>
                <span class="fw-semibold"><%= transaction.orderId %></span>
            </div>
        <% } %>
        
        <% if (transaction.email) { %>
            <div class="mb-2">
                <span class="text-muted">Email:</span>
                <span class="fw-semibold"><%= transaction.email %></span>
            </div>
        <% } %>

        <% if (locals.orderDetails && orderDetails.mobileNumber) { %>
            <div>
                <span class="text-muted">Phone:</span>
                <span class="fw-semibold"><%= orderDetails.mobileNumber %></span>
            </div>
        <% } %>
    </div>

    <!-- Payment Summary -->
    <div class="mb-4">
        <h3 class="h5 mb-3">Payment Summary</h3>
        
        <% if (transaction.orderDescription || (locals.orderDetails && orderDetails.orderDescription)) { %>
            <div class="bg-white rounded-3 shadow-sm p-3 mb-3">
                <p class="mb-0 text-muted"><%= transaction.orderDescription || orderDetails.orderDescription %></p>
            </div>
        <% } %>

        <div class="bg-white rounded-3 shadow-sm p-3">
            <div class="d-flex justify-content-between align-items-baseline">
                <span class="text-muted">Total Amount:</span>
                <span class="h5 mb-0 ms-2">
                    <%= new Intl.NumberFormat('en-US', {
                        style: 'currency',
                        currency: transaction.currency || 'USD'
                    }).format(transaction.amount) %>
                </span>
            </div>
        </div>
    </div>

    <!-- Security Notice -->
    <div class="bg-success bg-opacity-10 rounded-3 p-3">
        <div class="d-flex gap-3">
            <i data-lucide="shield" class="text-success"></i>
            <div>
                <h4 class="h6 mb-1">Secure Payment</h4>
                <p class="small mb-0 text-success">
                    Your payment information is encrypted and secure
                </p>
            </div>
        </div>
    </div>
</div>