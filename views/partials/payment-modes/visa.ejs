<form @submit.prevent="handleVisaPayment" class="payment-form">
    <div class="mb-3">
        <label for="cardNumber" class="form-label">Card Number</label>
        <input
            type="text"
            id="cardNumber"
            x-model="cardData.number"
            class="form-control"
            placeholder="4242 4242 4242 4242"
            maxlength="19"
            @input="formatCardNumber($event)">
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="expiry" class="form-label">Expiry Date</label>
            <input
                type="text"
                id="expiry"
                x-model="cardData.expiry"
                class="form-control"
                placeholder="MM/YY"
                maxlength="5"
                @input="formatExpiry($event)">
        </div>

        <div class="col-md-6 mb-3">
            <label for="cvv" class="form-label">CVV</label>
            <input
                type="text"
                id="cvv"
                x-model="cardData.cvv"
                class="form-control"
                placeholder="123"
                maxlength="3">
        </div>
    </div>
</form>