<div 
    class="modal fade" 
    id="paymentStatusModal" 
    tabindex="-1" 
    x-show="showStatusModal"
    @hidden.bs.modal="handleModalClose">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center p-4">
                <template x-if="modalStatus === 'loading'">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </template>
                
                <template x-if="modalStatus === 'success'">
                    <i data-lucide="check-circle" class="text-success mb-3" style="width: 48px; height: 48px;"></i>
                </template>
                
                <template x-if="modalStatus === 'error'">
                    <i data-lucide="x-circle" class="text-danger mb-3" style="width: 48px; height: 48px;"></i>
                </template>

                <h5 class="modal-title mb-3" x-text="modalTitle"></h5>
                <p class="text-muted mb-0" x-text="modalMessage"></p>
            </div>
        </div>
    </div>
</div>